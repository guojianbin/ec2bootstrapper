<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Ec2BootstrapperGUI.PasswordPrompt"
	x:Name="Window"
	Title="Ready to Deploy"
	Width="513" Height="220"
    ResizeMode="NoResize">

	<Grid x:Name="LayoutRoot" Height="182" Width="505">
		<TextBlock Name="Instruction" Margin="59,25,60,0" VerticalAlignment="Top" Height="40" Text="Please enter the instance administrator's password, or click OK if you have not changed administrator's password:" TextWrapping="Wrap"/>
		<PasswordBox Name="AdminPassword" Margin="59,71,60,85"/>
        <Button HorizontalAlignment="Left" Margin="93,0,0,42" VerticalAlignment="Bottom" Click="cancelButton_Click" Width="114" Height="28" Content="Cancel"/>
        <Button Name="OkButton" Margin="0,0,91,42" Content="Ok" VerticalAlignment="Bottom" Height="28" Click="okButton_Click" HorizontalAlignment="Right" Width="110" />
        <StatusBar HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,-9">
            <StatusBarItem>
                <TextBlock Name="StatusBk" Width="110">Ready</TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Name="ProgBar" IsIndeterminate="False" Width="493" HorizontalAlignment="Right" Orientation="Horizontal" Height="20" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>